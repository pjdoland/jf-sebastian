# Personality Selection
# Options: 'johnny' (tiki bartender), 'mr_lincoln' (Abraham Lincoln), 'leopold' (conspiracy theorist)
# See personalities/README.md for how to create new personalities
PERSONALITY=johnny

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Wake Word Detection (OpenWakeWord)
# No API key required! OpenWakeWord is fully open source.
# Custom wake word models (.onnx files) should be placed in the models/ directory.
# See README.md for instructions on training custom wake words.

# Audio Configuration
# Run `python -m teddy_ruxpin.modules.audio_output` to list available devices
INPUT_DEVICE_NAME=MacBook Air Microphone
OUTPUT_DEVICE_NAME=Arsvita

# Sample rate for audio processing (Hz)
# Must be 16000, 22050, 44100, or 48000
# 16000 is recommended for wake word detection (Picovoice requirement)
SAMPLE_RATE=16000

# Audio chunk size for processing
CHUNK_SIZE=1024

# Voice Activity Detection
# Aggressiveness mode: 0 (least aggressive) to 3 (most aggressive)
VAD_AGGRESSIVENESS=3

# Silence timeout in seconds (return to IDLE if no speech detected)
SILENCE_TIMEOUT=5.0

# Silence required to end speech after talking (seconds)
SPEECH_END_SILENCE_SECONDS=0.5

# Minimum listen window after wake before we consider ending (seconds)
MIN_LISTEN_SECONDS=1.0

# Conversation Settings
# Clear conversation history after this many seconds of idle time
CONVERSATION_TIMEOUT=120.0

# Maximum conversation history messages to maintain
MAX_HISTORY_LENGTH=20

# OpenAI Model Configuration
WHISPER_MODEL=whisper-1
GPT_MODEL=gpt-4o-mini
TTS_MODEL=gpt-4o-mini-tts
# Note: TTS voice and style are defined per personality in personalities/
# The gpt-4o-mini-tts model supports prompting for accent, tone, emotional range, etc.

# Animatronic Control Settings
# PPM control signals generated at 44.1kHz for precise timing
# Syllable-based lip sync with sentiment-based eye control

# Audio playback preroll (milliseconds) to prevent clipped starts
PLAYBACK_PREROLL_MS=240

# Volume levels (0.0 to 2.0 for voice, 0.0 to 1.0 for control)
VOICE_GAIN=1.05
CONTROL_GAIN=0.52

# Sentiment thresholds for eye control
SENTIMENT_POSITIVE_THRESHOLD=0.3
SENTIMENT_NEGATIVE_THRESHOLD=-0.3

# Wake Word Detection Threshold (0.0 to 1.0, higher = more strict)
WAKE_WORD_THRESHOLD=0.99

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO

# Save audio files for debugging
SAVE_DEBUG_AUDIO=false
DEBUG_AUDIO_PATH=./debug_audio/
